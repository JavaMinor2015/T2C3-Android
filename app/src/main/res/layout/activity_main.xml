<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderTableLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/valuecellborder">
            <TextView android:text="@string/columnID"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_column="0"
                android:layout_weight="1"/>
            <!--<TextView android:text="@string/columnFirstName"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_column="1"-->
                <!--android:layout_weight="1">-->
            <!--</TextView>-->
            <!--<TextView android:text="@string/columnLastName"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_column="2"-->
                <!--android:layout_weight="1">-->
            <!--</TextView>-->
            <TextView android:text="@string/columnItemAmount"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_column="1"
                android:layout_weight="1">
            </TextView>
            <TextView android:text="@string/columnTotalPrice"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_column="2"
                android:layout_weight="1">
            </TextView>
            <TextView android:text="@string/columnStatus"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_column="3"
                android:layout_weight="1">
            </TextView>
        </TableRow>
    </TableLayout>

</RelativeLayout>
